{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LeedPDF",
  "identifier": "my.leed.pdf",
  "build": {
    "frontendDist": "../.vercel/output/static",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "LeedPDF - Draw and Annotate on PDFs",
        "width": 800,
        "height": 600,
        "resizable": true,
        "center": true,
        "focus": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "name": "PDF Document",
        "ext": ["pdf"],
        "role": "Editor",
        "rank": "Default",
        "description": "PDF Drawing and Annotation Tool"
      }
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["leedpdf"]
      }
    }
  }
}


