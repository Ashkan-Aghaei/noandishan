{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "macos-capability",
  "platforms": [
    "macOS"
  ],
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "/**" }
      ]
    }
  ]
}
